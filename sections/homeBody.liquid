{% schema %}
{
 "name": "Body",
 "settings": [
   {
     "id": "bubbles",
     "type": "image_picker",
     "label": "bubbles"
   },
   {
     "id": "followSkull",
     "type": "image_picker",
     "label": "followSkull"
   },
   {
     "id": "arrow",
     "type": "image_picker",
     "label": "arrow"
   },
   {
     "id": "superTitle",
     "type": "text",
     "label": "superTitle"
   },
   {
     "id": "title",
     "type": "text",
     "label": "title"
   },
   {
     "id": "body",
     "type": "textarea",
     "label": "body"
   },
   {
     "id": "buttonLink",
     "type": "text",
     "label": "buttonLink"
   },
   {
     "id": "buttonText",
     "type": "text",
     "label": "buttonText"
   }
 ],
 "blocks":[
   {
     "type": "slide",
     "name": "slide",
     "settings":[
       {
         "id": "link",
         "type": "url",
         "label": "link"
       },
       {
         "id": "img",
         "type": "image_picker",
         "label": "img"
       },
       {
         "id": "title",
         "type": "text",
         "label": "title"
       }
     ]
   }
 ]
}
{% endschema %}

<div class="homeBodySection">
  <div class="bottomBubbles">
    <img src="{{ section.settings.bubbles | img_url:'1800x' }}">
  </div>
  <div class="skullContainer">
    <div class="followSkull">
      <img src="{{ section.settings.followSkull | img_url: '1300x' }}">
    </div>
  </div>
  <div class="slideContainer">
    <div class="homeBodySlide">
      {% for block in section.blocks %}
      {% if block.type == 'slide' %}
      	<div class="slideBlock">
          <a href="{{ block.settings.link }}">
            <img src="{{ block.settings.img | img_url: '600x' }}">
			<span>
              {{ block.settings.title }}
            </span>
          </a>
        </div>
      {% endif %}
      {% endfor %}
    </div>
