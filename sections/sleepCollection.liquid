  {% for product in collections['car-care'].products %}
  {% assign totalCount = totalCount | plus: 1 %}
  {% endfor %}
  
  {% assign product = collections['car-care'].products %}
  {% assign remainder = totalCount | modulo: 4 %}
  {% assign fullItems = totalCount | minus: remainder %}
  {% assign fullRow = fullItems | divided_by: 4 %}
  {% assign halfRow = fullRow | times: 2 %}
  {% assign currentItem = 0 %}
  
