              <img style="color:#{{ product[currentItem].featured_image.alt }};" src="{{ product[currentItem].featured_image | img_url: '700x' }}">
              <span class="numRow">
                <span class="price">
                  {{ product[currentItem].price | money_without_currency }}
                </span>
                <span class="bar">
                  {{ product[currentItem].variants[0].barcode }}
                </span>
              </span>
              <span class="title">
                {{ product[currentItem].title }}
              </span>
              <span class="button">
                <img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/checkout.png?5675951094142806782">
                <span>View Product</span>
              </span>
            </a>
          {% assign currentItem = currentItem | plus: 1 %}
          {% endfor %}
