<div class="collectionPage">
  <div class="banner">
    <img src="{{ section.settings.bannerBackground | img_url: '1600x' }}">
    <div class="text">
      <div class="line"></div>
      <div class="breadCrumb">
        <a href="/">Home</a><img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/arrow2.png?5675951094142806782"><span>Products</span>
      </div>
      <h1>{{ section.settings.title }}</h1>
    </div>
  </div>
