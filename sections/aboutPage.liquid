{% schema %}
{
 "name": "Section Name",
 "settings": [
   {
     "id": "bannerImg",
     "type": "image_picker",
     "label": "bannerImg"
   },
   {
     "id": "title",
     "type": "text",
     "label": "title"
   },
   {
     "id": "leftImg",
     "type": "image_picker",
     "label": "leftImg"
   },
   {
     "id": "rightSideTitle",
     "type": "text",
     "label": "rightSideTitle"
   },
   {
     "id": "rightSideBody",
     "type": "textarea",
     "label": "rightSideBody"
   },
   {
     "id": "youtubeIframe",
     "type": "text",
     "label": "youtubeIframe"
   },
   {
     "id": "phoneNumber",
     "type": "text",
     "label": "phoneNumber"
   },
   {
     "id": "email",
     "type": "text",
     "label": "email"
   },
   {
     "id": "addressLine1",
     "type": "text",
     "label": "addressLine1"
   },
   {
     "id": "addressLine2",
     "type": "text",
     "label": "addressLine2"
   },
   {
     "id": "hours",
     "type": "text",
     "label": "hours"
   },
   {
     "id": "instagram",
     "type": "text",
     "label": "instagram"
   },
   {
     "id": "facebook",
     "type": "text",
     "label": "facebook"
   },
   {
     "id": "twitter",
     "type": "text",
     "label": "twitter"
   },
   {
     "id": "youtube",
     "type": "text",
     "label": "youtube"
   }
 ],
 "blocks":[
   {
     "type": "quote",
     "name": "quote",
     "settings":[
       {
         "id": "description",
         "type": "text",
         "label": "description"
       },
       {
         "id": "date",
         "type": "text",
         "label": "date"
       },
       {
         "id": "name",
         "type": "text",
         "label": "name"
       }
     ]
   }
 ]
}
{% endschema %}

<div class="aboutPage">
  <div class="banner">
    <img src="{{ section.settings.bannerImg | img_url: '1600x' }}">
    <div class="text">
      <div class="line"></div>
      <div class="breadCrumb">
        <a href="/">Home</a><img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/arrow2.png?5675951094142806782"><span>About us</span>
      </div>
      <h1>{{ section.settings.title }}</h1>
    </div>
  </div>
  <div class="innerContainer">
    <div class="SBS">
      <div class="left">
        <img src="{{ section.settings.leftImg | img_url: '1000x' }}">
      </div>
      <div class="right">
        <h2>
          {{ section.settings.rightSideTitle }}
        </h2>
        <div class="body">
          {{ section.settings.rightSideBody }}
        </div>
      </div>
    </div>
    <div class="videoBlock">
      <div class="responsiveIframe">
        {{ section.settings.youtubeIframe }}
      </div>
    </div>
  </div>
  <div class="quotes">
    <div class="title">
      <span>What people have to say —</span>
    </div>
    <div class="quoteSlideShow">
      {% for block in section.blocks %}
      {% if block.type == 'quote' %}
      	<div class="block">
          <div class="stars">
            ★★★★★
          </div>
          <div class="desc">
            {{ block.settings.description }}
          </div>
          <div class="bottom">
              {{ block.settings.date }} - {{ block.settings.name }}
          </div>
      	</div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="contact">
    <div class="inner">
      <div class="info">
        <span class="header">Drop us a line</span>
        <a href="tel:{{ section.settings.phoneNumber }}">{{ section.settings.phoneNumber }}</a>
        <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
        <div class="address">
          <span>{{ section.settings.addressLine1 }}</span>
          <span>{{ section.settings.addressLine2 }}</span>
          <span>{{ section.settings.hours }}</span>
        </div>
        <div class="social">
          <a href="{{ section.settings.instagram }}">
            <img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/insta_29c77b02-727c-4049-9f42-28ec4b09da5a.png?6509036608983583558">
          </a>
          <a href="{{ section.settings.facebook }}">
            <img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/facebook.png?6509036608983583558">
          </a>
          <a href="{{ section.settings.twitter }}">
            <img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/twitter_0b1e6bfb-0536-40c3-b645-2e80ec67c526.png?6509036608983583558">
          </a>
          <a href="{{ section.settings.youtube }}">
            <img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/youtube_347f3ef9-e735-41aa-92a2-41e42ed8b489.png?6509036608983583558">
          </a>
        </div>
      </div>
      <div class="form">
        <!-- Begin Mailchimp Signup Form -->
          <div id="mc_embed_signup">
          <form action="https://voodooride.us15.list-manage.com/subscribe/post?u=268b5e2c470989236d34f708a&amp;id=04f7cd0166" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
              <div id="mc_embed_signup_scroll">

          <div class="mc-field-group">
              
              <select name="MMERGE5" class="required" id="mce-MMERGE5">
              <option value="">Subject</option>
              <option value="First Choice">First Choice</option>
          <option value="Second Choice">Second Choice</option>
          <option value="Third Choice">Third Choice</option>

              </select>
          </div>
          <div class="mc-field-group">
              <input placeholder="Order Reference" type="text" value="" name="OREF" class="required" id="mce-OREF">
          </div>
          <div class="mc-field-group">
            <input placeholder="Email" type="email" value="" name="REALEMAIL" class="required email" id="mce-realEmail">
              
          </div>    
          <div class="mc-field-group hiddenField">
              <input placeholder="Message" type="text" value="" name="MESSAGE" class="required" id="mce-MESSAGE">
          </div>
          <textarea placeholder="Message" class="fakeTextArea"></textarea>
          <input placeholder="Email" type="email" value="" name="EMAIL" class="required email hiddenEmail" id="mce-EMAIL">
                
              <div id="mce-responses" class="clear">
                  <div class="response" id="mce-error-response" style="display:none"></div>
                  <div class="response" id="mce-success-response" style="display:none"></div>
              </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_268b5e2c470989236d34f708a_04f7cd0166" tabindex="-1" value=""></div>
              <div class="inputflex clear"><input disabled="disabled" type="submit" value="SUBMIT" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
              </div>
          </form>
          </div>

        <!--End mc_embed_signup-->
      </div>
    </div>
  </div>
</div>