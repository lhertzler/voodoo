  <div class="contentContainer">
    <div class="videos" style="display:none;">
      {% assign videos = product.metafields["global"]["videos"] | split: '***' %}
      {% assign videosSize = videos | size %}
      {% assign videosSize = videosSize | minus: 1 %}
      {% for videoIndex in (0..videosSize) %}
      	{% if videoIndex != 0 %}
      		<div class="responsiveIframeContainer">
              {{ videos[videoIndex] | replace: '<p>', '' | replace: '</p>', '' | replace: '&nbsp;', '' | replace: '&lt;', '<' | replace: '&gt;', '>'}}
      		</div>
      	{% endif %}
      {% endfor %}
    </div>
    <div class="details">
      {{ product.metafields["global"]["details"] | replace: '<p>', '' | replace: '</p>', '' | replace: '<div>', '<div data-aos="fade-right">' | replace: '<span>', '<span data-aos="fade-right">' }}
    </div>
    <div class="reviews" style="display:none;">
      {% include 'product-reviews' %}
    </div>
    <div class="faq" style="display:none;">
      {{ product.metafields["global"]["faq"] }}
    </div>
  </div>
  <div class="otherItems">
