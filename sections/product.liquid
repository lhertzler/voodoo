<div class="productPageContainer">
  <div class="banner">
    {% if product.metafields["global"]["banner"] %}
    	<img src="{{ product.metafields["global"]["banner"] }}">
    {% else %}
    	<img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/t/2/assets/banner1-1540572314694.jpg?18135746564462884298">
    {% endif %}
  </div>
  <div class="vertTitleContainer">
    <span>
      {{ product.metafields["global"]["side-title"] }} —
    </span>
  </div>
  <div class="topProdSection">
    <div class="prodImg">
      <img src="{{ product.featured_image | img_url: '520x' }}">
    </div>
