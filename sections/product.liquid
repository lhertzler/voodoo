      <div class="line"></div>
      <div class="breadCrumb">
        <a href="/">Home</a><img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/arrow2.png?5675951094142806782"><span>Products</span>
      </div>
      <div class="title">
        {{ product.title }}
      </div>
      <div class="priceRow">
        <span class="price">
          ${{ product.price | money_without_currency }}
        </span>
        <span class="barCode">
          {{ product.variants[0].barcode }}
        </span>
      </div>
      <div class="buyRow">
        <div class="quantitySelector">
          <div class="minusButton">
            -
          </div>
          <input class="quantityNum" type="number" min="1" value="1">
          <div class="plusButton">
            +
          </div>
        </div>
        <div class="buyButton" data-ID="{{ product.variants[0].id }}" data-quant="1">
          <img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/checkout.png?5675951094142806782">
          <span>
            Add To Cart
          </span>
        </div>
      </div>
      <a class="storeFinder" href="">
        <img src="https://cdn.shopify.com/s/files/1/0046/8326/8165/files/pin.png?14809530229444470617">
        <span>Find in Stores</span>
      </a>
      <div class="weight">
        {% assign gram = product.variants[0].weight_in_unit %}
        {% assign grams = gram | split: '.' %}
        NET WT. {{ grams[0] }} OZ. ({{ product.variants[0].weight }} GRAMS)
      </div>
      <div class="desc">
        {% assign desc = product.description | split: '—' %}
        {{ desc[1] }}
      </div>
      <a href="#lower">
        Learn and read more <span>▼</span>
      </a>
    </div>
